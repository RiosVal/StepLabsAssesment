                                    </svg>
                            {% endcase %}
                            <span>{{ block.settings.text }}</span>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}

        </div>

        <div class="hero-cta__media">
            {% if section.settings.image != blank %}
                <img
                    src="{{ section.settings.image | image_url: width: 1200 }}"
                    srcset="{{ section.settings.image | image_url: width: 800 }} 800w, {{ section.settings.image | image_url: width: 1600 }} 1600w"
                    sizes="(max-width: 740px) 100vw, 50vw"
                    alt="{{ section.settings.image_alt | default: section.settings.title | escape }}"
                    loading="lazy"
                    width="1600"
                    height="720"
                />
            {% endif %}
        </div>
    </div>
</section>



{% schema %}
{
  "name": "Hero con CTAs",
  "settings": [
    { "type": "text", "id": "top_label", "label": "Texto pequeño (eyebrow)" },
    { "type": "text", "id": "title", "label": "Título", "default": "Wake Up The Muscles That Matter." },
    { "type": "textarea", "id": "subtitle", "label": "Subtítulo", "default": "Suji delivers science-backed targeted compression..." },
    { "type": "image_picker", "id": "image", "label": "Imagen (derecha)" },
    { "type": "text", "id": "image_alt", "label": "Alt de la imagen (accesibilidad)" },
    { "type": "text", "id": "small_text", "label": "Texto pequeño inferior" }
  ],

  "blocks": [
    {
      "type": "cta_button",
      "name": "Botón CTA",
      "settings": [
        { "type": "text", "id": "button_label", "label": "Etiqueta", "default": "Try Suji" },
        { "type": "url", "id": "button_link", "label": "URL del botón" },
        { "type": "select", "id": "button_style", "label": "Estilo",
          "options": [
            { "value": "primary", "label": "Principal" },
            { "value": "outline", "label": "Outline" }
          ],
          "default": "primary"
        },
        { "type": "checkbox", "id": "open_in_new_window", "label": "Abrir en nueva pestaña" }
      ]
    },
    {
      "type": "feature",
      "name": "Beneficio",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Ícono (inline SVG)",
          "options": [
            { "value": "muscle", "label": "Músculos" },
            { "value": "recovery", "label": "Recuperación" },
            { "value": "joints", "label": "Articulaciones" }
          ],
          "default": "muscle"
        },
        { "type": "text", "id": "text", "label": "Texto", "default": "Activates Muscles & Builds Strength" }
      ]
    }
  ],

  "max_blocks": 8,

  "presets": [
    {
      "name": "Hero con CTAs",
      "category": "Custom",
      "blocks": [
        { "type": "cta_button", "settings": { "button_label": "Try Suji", "button_style": "primary" } },
        { "type": "cta_button", "settings": { "button_label": "How It Works", "button_style": "outline" } },
        { "type": "feature", "settings": { "icon": "muscle", "text": "Activates Muscles & Builds Strength" } },
        { "type": "feature", "settings": { "icon": "recovery", "text": "Boosts Recovery & Circulation" } },
        { "type": "feature", "settings": { "icon": "joints", "text": "Supports Healthy Joints & Movement" } }
      ]
    }
  ]
}
{% endschema %}

