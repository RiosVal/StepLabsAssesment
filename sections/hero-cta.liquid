{{ 'hero-cta.css' | asset_url | stylesheet_tag }}

<section id="section-{{ section.id }}" class="hero-cta">
    <div class="hero-cta__inner">
        <div class="hero-cta__content">
            {% if section.settings.top_label != blank %}
                <p class="hero-cta__eyebrow">{{ section.settings.top_label }}</p>
            {% endif %}

            {% if section.settings.title != blank %}
                <h2 class="hero-cta__title">{{ section.settings.title }}</h2>
            {% endif %}

            {% if section.settings.subtitle != blank %}
                <div class="hero-cta__subtitle">{{ section.settings.subtitle }}</div>
            {% endif %}     
            
            {% if section.blocks.size > 0 %}
                <div class="hero-cta__buttons" role="group" aria-label="Call to actions">
                    {% for block in section.blocks %}
                        {% if block.type == 'cta_button' %}
                            <a
                                href="{{ block.settings.button_link | escape }}"
                                class="hero-cta__btn {% if block.settings.button_style == 'outline' %}hero-cta__btn--outline{% else %}hero-cta__btn--primary{% endif %}"
                                {% if block.settings.open_in_new_window %} target="_blank" rel="noopener"{% endif %}
                                aria-label="{{ block.settings.button_label | escape }}"
                            >
                                {{ block.settings.button_label }}
                            </a>
                        {% endif %}
                    {% endfor %}
                </div>
            {% endif %}

            {% if section.settings.small_text != blank %}
                <p class="hero-cta__small">{{ section.settings.small_text }}</p>
            {% endif %}

            {% assign features = section.blocks | where: "type", "feature" %}
